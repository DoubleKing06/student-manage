<DIV id="navBar" title="学生基本信息">
	<li><a href="#springUrl('')/">首页</a><span class="divider">/</span></li>
	<li class="active">学生基本信息</li>
</DIV>
<form class="well form-search" name="studentBasicInfoListForm" action="/studentBasicInfo" method="POST">
	<!-- 智能分页与排序 -->
	<input type="hidden" name="currentPage" value="$!{page.currentPage}"/>
	<input type="hidden" name="pageSize" value="$!{page.pageSize}"/>
	<input type="hidden" name="orderField" value="$!{studentBasicInfo.orderField}"/>
	<input type="hidden" name="orderFieldType" value="$!{studentBasicInfo.orderFieldType}"/>
	<!-- 查询条件 -->
	<input class="span2" type="text" name="xuehao" value="$!{studentBasicInfo.xuehao}" placeholder="学号"/>
	<input class="span2" type="text" name="name" value="$!{studentBasicInfo.name}" placeholder="姓名"/>
	<input class="span2" type="text" name="nianji" value="$!{studentBasicInfo.nianji}" placeholder="年级"/>
	<input class="span2" type="text" name="banji" value="$!{studentBasicInfo.banji}" placeholder="班级"/>
	<input class="span2" type="text" name="idNumber" value="$!{studentBasicInfo.idNumber}" placeholder="身份证号"/>
	<button type="submit" class="btn"><i class="icon-search"></i>搜索</button>
	<!-- 新增按钮 -->
	<div class="btn-group pull-right">
		<a class="btn" onclick="XUI.window.open('/studentBasicInfo/0',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i>新增</a>
	</div>
</form>
<div style="width:100%;text-align:right">
	        <input type="checkbox" name="interest" value="xy" checked="checked"/>学业
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="cj" checked="checked"/>成绩
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="pypj" checked="checked"/>优奖
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="zz" checked="checked"/>资助
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="qthj" checked="checked"/>其他获奖
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="wj" checked="checked"/>违纪
	        &nbsp;&nbsp;<input type="checkbox" name="interest" value="remark" checked="checked"/>备注
	        <!--<input type="submit"/>-->
</div>
<!-- 表格数据 -->
<table class="table table-striped table-bordered table-condensed grid">
	<thead>
		<tr>
			<th #sorting($!{studentBasicInfo} "xuehao")>学号</th>
			<th #sorting($!{studentBasicInfo} "name")>姓名</th>
			<th #sorting($!{studentBasicInfo} "minzu")>民族</th>
			<th #sorting($!{studentBasicInfo} "zhengzhi")>政治面貌</th>
			<th #sorting($!{studentBasicInfo} "idNumber")>身份证号</th>
			<th #sorting($!{studentBasicInfo} "phone")>手机号码</th>
			<th #sorting($!{studentBasicInfo} "zhuanye")>专业</th>
			<th #sorting($!{studentBasicInfo} "nianji")>年级</th>
			<th #sorting($!{studentBasicInfo} "banji")>班级</th>
			<th #sorting($!{studentBasicInfo} "gongyu")>公寓</th>
			<th #sorting($!{studentBasicInfo} "qinshihao")>寝室</th>
			<th #sorting($!{studentBasicInfo} "jiazhang1")>家长1</th>
			<th #sorting($!{studentBasicInfo} "jiazhang1Phone")>家长1电话</th>
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
#foreach(${item} in ${page.result})
		<tr>
			<td>$!{item.xuehao}</td>
			<td>$!{item.name}</td>
			<td>$!{item.minzu}</td>
			<td>$!{item.zhengzhi}</td>
			<td>$!{item.idNumber}</td>
			<td>$!{item.phone}</td>
			<td>$!{item.zhuanye}</td>
			<td>$!{item.nianji}</td>
			<td>$!{item.banji}</td>
			<td>$!{item.gongyu}</td>
			<td>$!{item.qinshihao}</td>
			<td>$!{item.jiazhang1}</td>
			<td>$!{item.jiazhang1Phone}</td>
			<td class="textC">
				<div class="btn-group">
					<a class="btn btn-mini" onclick="XUI.ajax.delete('/studentBasicInfo/${item.id}',null,{refresh:true})"><i class="icon-trash"></i> 删除</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/studentBasicInfo/${item.id}',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i> 修改</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/studentBasicInfo/${item.id}',null,'GET',{title:$(this).text()})"><i class="icon-eye-open"></i> 查看</a>
					<a class="btn btn-mini" target="_blank" onclick="javascript:test(${item.id})"><i class="icon-eye-open"></i> 查看成长记录</a>
					<a class="btn btn-mini" href="javascript:download(${item.id});"><i class="icon-pencil"></i>下载成长记录表</a>
					<a class="btn btn-mini" href="javascript:downloadBasicPDF(${item.id});"><i class="icon-pencil"></i>下载基本信息表</a>
				</div>
				
				
	<script>
		function download(id) {
						var text="";
			$("input[name=interest]").each(function() {
              if ($(this).attr("checked")) {  
                text += $(this).val()+",";  
               }  
            });  
			if(text){
			 document.location.href='/studentBasicInfo/getPdf?id='+id+'&text='+text;
			}else{
			 document.location.href='/studentBasicInfo/getPdf?id='+id;
			}
		}
	</script>
	<script>
		function downloadBasicPDF(id) {
			var text="";
			$("input[name=interest]").each(function() {
              if ($(this).attr("checked")) {  
                text += $(this).val()+",";  
               }  
            });  
			if(text){
			 document.location.href='/studentBasicInfo/getBasicPdf?id='+id+'&text='+text;
			}else{
			 document.location.href='/studentBasicInfo/getBasicPdf?id='+id;
			}
		
		}
	</script>
		
	<script>
		function test(id) {
			var text="";  
			 $("input[name=interest]").each(function() {
	              if ($(this).attr("checked")) {  
	                text += $(this).val()+",";  
	               }  
	            });  
			if(text){
			 XUI.window.open('/studentBasicInfo/getinfo?id='+id+'&text='+text,null,'GET',{title:$(this).text()})
			}else{
			 XUI.window.open('/studentBasicInfo/getinfo?id='+id,null,'GET',{title:$(this).text()})
			}
		}
	</script>
				
				
			</td>
		</tr>
#end
	</tbody>
</table>
