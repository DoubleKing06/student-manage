<DIV id="navBar" title="学业状况信息">
	<li><a href="#springUrl('')/">首页</a><span class="divider">/</span></li>
	<li class="active">学业状况信息</li>
</DIV>
<form class="well form-search" name="studentXueyeListForm" action="/studentXueye/studentXueyeSearch" method="POST">
	<!-- 智能分页与排序 -->
	<input type="hidden" name="currentPage" value="$!{page.currentPage}"/>
	<input type="hidden" name="pageSize" value="$!{page.pageSize}"/>
	<input type="hidden" name="orderField" value="$!{studentXueye.orderField}"/>
	<input type="hidden" name="orderFieldType" value="$!{studentXueye.orderFieldType}"/>
	<!-- 查询条件 -->
	学号：<input class="span2" type="text" name="xuehao" value="$!{studentXueye.xuehao}" placeholder="学号"/>
	<!--<input class="span2" type="text" name="studentId" value="$!{studentXueye.name}" placeholder="姓名"/>-->
	<button type="submit" class="btn"><i class="icon-search"></i>搜索</button>
	<!-- 新增按钮 -->
	<div class="btn-group pull-right">
		<a class="btn" onclick="XUI.window.open('/studentXueye/0',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i>新增</a>
	</div>
</form>

<!-- 表格数据 -->
<table class="table table-striped table-bordered table-condensed grid">
	<thead>
		<tr>
			<!--<th #sorting($!{studentXueye} "id")>id</th>
			<th #sorting($!{studentXueye} "studentId")>学生编号</th>-->
			<th #sorting($!{studentXueye} "xuehao")>学号</th>
			<th #sorting($!{studentXueye} "name")>姓名</th>
			<th #sorting($!{studentXueye} "cet4")>英语四级</th>
			<th #sorting($!{studentXueye} "sanbizi")>三笔字</th>
			<th #sorting($!{studentXueye} "putonghua")>普通话</th>
			<!--<th #sorting($!{studentXueye} "updateTime")>更新时间</th>-->
			<th>操作</th>
		</tr>
	</thead>
	<tbody>
#foreach(${item} in ${page.result})
		<tr>
			<!--<td>$!{item.id}</td>
			<td>$!{item.studentId}</td>-->
			<td>$!{item.xuehao}</td>
			<td>$!{item.name}</td>
			<td>$!{item.cet4}</td>
			<td>$!{item.sanbizi}</td>
			<td>$!{item.putonghua}</td>
			<td class="textC">
				<div class="btn-group">
					<a class="btn btn-mini" onclick="XUI.ajax.delete('/studentXueye/${item.id}',null,{refresh:true})"><i class="icon-trash"></i> 删除</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/studentXueye/${item.id}',null,'PUT',{title:$(this).text()})"><i class="icon-pencil"></i> 修改</a>
					<a class="btn btn-mini" onclick="XUI.window.open('/studentXueye/${item.id}',null,'GET',{title:$(this).text()})"><i class="icon-eye-open"></i> 查看</a>
				</div>
			</td>
		</tr>
#end
	</tbody>
</table>
<!-- 分页栏 -->
#showPage($!{page})