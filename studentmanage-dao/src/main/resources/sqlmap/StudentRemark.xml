<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.cwnu.studentmanage.dao.StudentRemarkDao">

	<!-- student_remark 所有查询列 -->
	<sql id="QUERY_COLUMN_LIST">
		<![CDATA[id,student_id AS studentId,xueqi,remark,remark_time AS remarkTime,update_time AS updateTime]]>
	</sql>

	<!-- student_remark 查询列来源表-->
	<sql id="QUERY_FROM_TABLE"><![CDATA[FROM student_remark]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id="QUERY_WHERE_CLAUSE">
		<where>
			<if test="id != null and id != ''"><![CDATA[AND id = #{id}]]></if>
			<if test="studentId != null and studentId != ''"><![CDATA[AND student_id = #{studentId}]]></if>
			<if test="xueqi != null and xueqi != ''"><![CDATA[AND xueqi = #{xueqi}]]></if>
			<if test="remark != null and remark != ''"><![CDATA[AND remark = #{remark}]]></if>
			<if test="remarkTime != null and remarkTime != ''"><![CDATA[AND remark_time = #{remarkTime}]]></if>
			<if test="updateTime != null and updateTime != ''"><![CDATA[AND update_time = #{updateTime}]]></if>
		</where>
	</sql>
	
	<!-- 智能排序与分页 -->
	<sql id="QUERY_ORDER_LIMIT_CONDTION">
		<if test="orderField != null and orderField != '' and orderFieldType != null and orderFieldType != ''"><![CDATA[ORDER BY ${orderField} ${orderFieldType}]]></if>
		<if test="startIndex != null and startIndex &gt;= 0 and pageSize != null and pageSize &gt; 0"><![CDATA[LIMIT #{startIndex},#{pageSize}]]></if>
	</sql>

	<!-- 更新列字段,只要不为NULL则更新,除开主键列 -->
	<sql id="UPDATE_COLUMN_SET">
		<set>
			<if test="studentId != null"><![CDATA[student_id = #{studentId},]]></if>
			<if test="xueqi != null"><![CDATA[xueqi = #{xueqi},]]></if>
			<if test="remark != null"><![CDATA[remark = #{remark},]]></if>
			<if test="remarkTime != null"><![CDATA[remark_time = #{remarkTime},]]></if>
			<if test="updateTime != null"><![CDATA[update_time = #{updateTime},]]></if>
		</set>
	</sql>

	<!-- 插入student_remark记录 -->
	<insert id="insertEntry" parameterType="studentRemark" >
		<![CDATA[
			INSERT INTO student_remark (id,student_id,xueqi,remark,remark_time,update_time)
			VALUES (#{id},#{studentId},#{xueqi},#{remark},#{remarkTime},#{updateTime})
		]]>
	</insert>
	
	<!-- 返回插入的编号,在事务开启状态下有效 -->
	<select id="lastSequence" resultType="int"><![CDATA[SELECT LAST_INSERT_ID() AS id]]></select>

	<!-- 删除记录,主键IN(array) -->
	<delete id="deleteByArrayKey" parameterType="java.lang.reflect.Array" >
		<![CDATA[DELETE FROM student_remark WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</delete>

	<!-- 删除,通过条件 -->
	<update id="deleteByCondtion" parameterType="studentRemark" >
		<![CDATA[DELETE FROM student_remark]]>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</update>

	<!-- 修改记录通过主键 -->
	<update id="updateByKey" parameterType="studentRemark" >
		<![CDATA[UPDATE student_remark]]>
		<include refid="UPDATE_COLUMN_SET"/>
		<![CDATA[WHERE id = #{id}]]>
	</update>

	<!-- 查询,通过主键IN(array) -->
	<select id="selectEntryArray" parameterType="java.lang.reflect.Array" resultType="studentRemark">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<![CDATA[WHERE id IN]]>
		<foreach collection="array" item="id" open="(" separator="," close=")">
			<![CDATA[#{id}]]>
		</foreach>
	</select>

	<!-- 查询,通过条件 -->
	<select id="selectEntryList" parameterType="studentRemark" resultType="studentRemark">
		<![CDATA[SELECT]]>
		<include refid="QUERY_COLUMN_LIST"/>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
		<include refid="QUERY_ORDER_LIMIT_CONDTION"/>
	</select>

	<!-- 总数查询,通过条件 -->
	<select id="selectEntryListCount" parameterType="studentRemark" resultType="int">
		<![CDATA[SELECT COUNT(id) AS dataCount]]>
		<include refid="QUERY_FROM_TABLE"/>
		<include refid="QUERY_WHERE_CLAUSE"/>
	</select>
	
	<!-- 其它SQL语句 -->
	
	
</mapper>